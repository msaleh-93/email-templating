    <![endif]-->
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family:
        -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue',
        Arial, sans-serif;
      background-color: #C5D9E8;
      margin: 0;
      padding: 0;
      width: 100%;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
    }

    table {
      border-collapse: collapse;
      border-spacing: 0;
    }

    img {
      border: 0;
      display: block;
      outline: none;
      text-decoration: none;
      -ms-interpolation-mode: bicubic;
    }

    .container {
      max-width: 600px;
      margin:
        0 auto;
      background-color: #ffffff;
    }

    .header {
      padding: 24px 24px 16px;
      background-color: #ffffff;
    }

    .logo {
      float: left;
      font-size: 24px;
      font-weight: 700;
      color: #1a1a1a;
    }

    .logo-blue {
      color: #0066FF;
    }

    .booking-id {
      float: right;
      text-align: right;
      font-size: 13px;
      color:
        #666;
      line-height: 1.4;
    }

    .clearfix::after {
      content: "";
      display: table;
      clear: both;
    }

    .success-section {
      text-align: center;
      padding: 32px 24px;
      background-color: #ffffff;
    }

    .checkmark {
      width: 48px;
      height: 48px;
      background-color: #22C55E;
      border-radius: 50%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
    }

    .success-title {
      font-size: 18px;
      font-weight: 600;
      color: #22C55E;
      margin-bottom: 24px;
    }

    .pnr-box {
      background-color: #F3F4F6;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 16px;
      text-align:
        center;
    }

    .pnr-label {
      font-size: 13px;
      color: #666;
      margin-bottom: 4px;
    }

    .pnr-code {
      font-size: 20px;
      font-weight: 700;
      color: #1a1a1a;
      letter-spacing: 1px;
    }

    .flight-card {
      border: 1px solid #E5E7EB;
      border-radius: 12px;
      padding: 20px;
      margin: 16px 24px;
      background-color:
        #ffffff;
    }

    .flight-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid #E5E7EB;
    }

    .airline-info {
      font-size: 16px;
      font-weight: 600;
      color: #1a1a1a;
    }

    .flight-number {
      color: #666;
      font-weight: 400;
      margin-left: 8px;
    }

    .class-type {
      font-size: 14px;
      color: #666;
    }

    .route-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 12px;
    }

    .city-info {
      flex:
        1;
    }

    .city-name {
      font-size: 13px;
      color: #0066FF;
      margin-bottom: 4px;
    }

    .airport-code {
      font-size: 24px;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 4px;
    }

    .time-info {
      font-size: 13px;
      color: #1a1a1a;
    }

    .flight-duration {
      flex: 0 0 auto;
      text-align: center;
      padding: 0 16px;
    }

    .plane-icon {
      color: #0066FF;
      font-size: 24px;
      margin: 0 8px;
    }

    .duration-text {
      font-size: 12px;
      color: #666;
      white-space: nowrap;
    }

    .layover-info {
      background-color: #F3F4F6;
      border-radius: 6px;
      padding:
        8px 12px;
      margin-top: 12px;
      font-size: 13px;
      color: #666;
      text-align:
        center;
    }

    .passenger-section {
      padding: 20px 24px;
      background-color:
        #ffffff;
    }

    .section-title {
      font-size: 15px;
      font-weight: 600;
      color:
        #1a1a1a;
      margin-bottom: 16px;
    }

    .passenger-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid #E5E7EB;
    }

    .passenger-item:last-child {
      border-bottom: none;
    }

    .passenger-info {
      display: flex;
      align-items:
        center;
    }

    .passenger-badge {
      width: 36px;
      height: 36px;
      background-color:
        #DBEAFE;
      color: #0066FF;
      border-radius: 6px;
      display: flex;
      align-items:
        center;
      justify-content: center;
      font-size: 12px;
      font-weight: 600;
      margin-right: 12px;
    }

    .passenger-name {
      font-size: 15px;
      color: #1a1a1a;
    }

    .passenger-type {
      font-size: 13px;
      color: #666;
      margin-left: 6px;
    }

    .passenger-role {
      font-size: 13px;
      color: #666;
    }

    .policy-section {
      background-color: #FEF3C7;
      border-radius: 8px;
      padding: 16px;
      margin: 16px 0;
    }

    .policy-title {
      font-size: 14px;
      font-weight: 600;
      color: #92400E;
      margin-bottom: 12px;
    }

    .policy-item {
      display: flex;
      align-items:
        flex-start;
      margin-bottom: 8px;
      font-size: 13px;
      color: #92400E;
    }

    .policy-item:last-child {
      margin-bottom: 0;
    }

    .policy-icon {
      margin-right:
        8px;
      margin-top: 2px;
    }

    .meta-info {
      display: flex;
      justify-content:
        space-between;
      margin-top: 16px;
      padding-top: 16px;
      border-top: 1px solid #E5E7EB;
    }

    .meta-item {
      flex: 1;
    }

    .meta-label {
      font-size: 12px;
      color:
        #666;
      margin-bottom: 4px;
    }

    .meta-value {
      font-size: 14px;
      font-weight:
        600;
      color: #1a1a1a;
    }

    .pricing-section {
      padding: 20px 24px;
      background-color: #ffffff;
    }

    .price-row {
      display: flex;
      justify-content:
        space-between;
      align-items: center;
      padding: 10px 0;
      font-size: 14px;
    }

    .price-label {
      color: #666;
    }

    .price-value {
      color: #1a1a1a;
      font-weight:
        500;
    }

    .total-row {
      border-top: 2px solid #E5E7EB;
      padding-top: 12px;
      margin-top: 8px;
      font-size: 16px;
      font-weight: 700;
    }

    .hotel-banner {
      margin: 24px;
      border-radius: 12px;
      overflow: hidden;
      background:
        linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
      box-shadow: 0 4px 12px rgba(0, 102, 255, 0.2);
    }

    .hotel-banner-link {
      display: block;
      padding:
        24px;
      text-decoration: none;
      color: #ffffff;
      text-align: center;
    }

    .hotel-banner-text {
      font-size: 18px;
      font-weight: 600;
      margin-bottom:
        8px;
    }

    .hotel-banner-arrow {
      font-size: 24px;
      margin-left: 8px;
    }

    .hotel-banner-icon {
      opacity: 0.3;
      float: right;
      font-size: 48px;
    }

    .help-section {
      text-align: center;
      padding: 24px;
      background-color:
        #ffffff;
    }

    .help-link {
      display: inline-flex;
      align-items: center;
      color:
        #0066FF;
      text-decoration: none;
      font-size: 15px;
      font-weight: 600;
    }

    .help-icon {
      margin-right: 8px;
    }

    .footer {
      background-color: #1E1B4B;
      padding: 32px 24px;
      text-align: center;
      color: #ffffff;
    }

    .footer-logo {
      font-size: 20px;
      font-weight: 700;
      margin-bottom: 16px;
    }

    .footer-contact {
      font-size: 13px;
      color: #C5D9E8;
    }

    /* Mobile Responsive */
    @media only screen and (max-width: 600px) {
      .container {
        width: 100% !important;
      }

      .header,
      .success-section,
      .flight-card,
      .passenger-section,
      .pricing-section,
      .hotel-banner,
      .help-section {
        padding-left: 16px !important;
        padding-right: 16px !important;
      }

      .flight-card,
      .hotel-banner {
        margin-left: 16px !important;
        margin-right: 16px !important;
      }

      .airport-code {
        font-size: 20px !important;
      }

      .route-container {
        flex-direction: row;
      }

      .flight-duration {
        padding: 0 8px !important;
      }
    }
  </style>
</head>

<body>
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td align="center" style="padding: 20px 0;">
        <table class="container" role="presentation" width="600" cellpadding="0" cellspacing="0" border="0">
          <!-- Header -->
          <tr>
            <td class="header clearfix">
              <div class="logo">
                <span class="logo-blue">‚â°</span>
                Akeed<span style="font-weight: 400;">CORP</span>
              </div>
              <div class="booking-id">
                {{bookingDate}}<br />
                ID:{{bookingId}}
              </div>
            </td>
          </tr>

          <!-- Success Section -->
          <tr>
            <td class="success-section">
              <div class="checkmark">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 6L9 17L4 12" stroke="white" stroke-width="3" stroke-linecap="round"
                    stroke-linejoin="round" />
                </svg>
              </div>
              <div class="success-title">
                {{#if isPendingApproval}}
                {{pendingApprovalTitle}}
                {{else}}
                {{confirmationTitle}}
                {{/if}}
              </div>
              <div class="pnr-box">
                <div class="pnr-label">PNR</div>
                <div class="pnr-code">{{pnr}}</div>
              </div>
            </td>
          </tr>

          <!-- Flight Cards -->
          {{#each flights}}
          <tr>
            <td>
              <div class="flight-card">
                <div class="flight-header">
                  <div class="airline-info">
                    {{airline}}<span class="flight-number">{{flightNumber}}</span>
                  </div>
                  <div class="class-type">{{class}}</div>
                </div>

                <div class="route-container">
                  <div class="city-info">
                    <div class="city-name">{{origin.city}}</div>
                    <div class="airport-code">{{origin.code}}</div>
                    <div class="time-info">{{origin.date}}
                      {{origin.time}}</div>
                  </div>

                  <div class="flight-duration">
                    <div style="display: flex; align-items: center; margin-bottom: 4px;">
                      <div style="flex: 1; height: 2px; background: #DBEAFE;"></div>
                      <span class="plane-icon">‚úà</span>
                      <div style="flex: 1; height: 2px; background: #DBEAFE;"></div>
                    </div>
                    <div class="duration-text">{{duration}}</div>
                  </div>

                  <div class="city-info" style="text-align: right;">
                    <div class="city-name">{{destination.city}}</div>
                    <div class="airport-code">{{destination.code}}</div>
                    <div class="time-info">{{destination.date}}
                      {{destination.time}}</div>
                  </div>
                </div>

                {{#if layover}}
                <div class="layover-info">
                  ‚è±
                  {{layover}}
                </div>
                {{/if}}
              </div>
            </td>
          </tr>
          {{/each}}

          <!-- Passenger Section -->
          <tr>
            <td class="passenger-section">
              <div class="section-title">{{passengerCount}}</div>

              {{#each passengers}}
              <div class="passenger-item">
                <div class="passenger-info">
                  <div class="passenger-badge">{{badge}}</div>
                  <div>
                    <span class="passenger-name">{{name}}</span>
                    <span class="passenger-type">{{type}}</span>
                  </div>
                </div>
                <div class="passenger-role">{{role}}</div>
              </div>
              {{/each}}

              {{#if policyViolations}}
              <div class="policy-section">
                <div class="policy-title">{{policyViolationsTitle}}</div>
                {{#each policyViolations}}
                <div class="policy-item">
                  <span class="policy-icon">‚ö†</span>
                  <span>{{this}}</span>
                </div>
                {{/each}}
              </div>
              {{/if}}

              <div class="meta-info">
                <div class="meta-item">
                  <div class="meta-label">{{requestedViaLabel}}</div>
                  <div class="meta-value">{{requestedVia}}</div>
                </div>
                <div class="meta-item">
                  <div class="meta-label">{{purposeLabel}}</div>
                  <div class="meta-value">{{purpose}}</div>
                </div>
                <div class="meta-item">
                  <div class="meta-label">{{tagLabel}}</div>
                  <div class="meta-value">{{tag}}</div>
                </div>
              </div>
            </td>
          </tr>

          <!-- Pricing Section -->
          {{#unless isPendingApproval}}
          <tr>
            <td class="pricing-section">
              <div class="price-row">
                <span class="price-label">{{basePriceLabel}}</span>
                <span class="price-value">{{currency}} {{basePrice}}</span>
              </div>
              <div class="price-row">
                <span class="price-label">{{serviceFeeLabel}}</span>
                <span class="price-value">{{currency}} {{serviceFee}}</span>
              </div>
              <div class="price-row">
                <span class="price-label">{{vatLabel}}</span>
                <span class="price-value">{{currency}} {{vat}}</span>
              </div>
              <div class="price-row total-row">
                <span class="price-label">{{totalPriceLabel}}</span>
                <span class="price-value">{{currency}} {{totalPrice}}</span>
              </div>
            </td>
          </tr>
          {{/unless}}

          <!-- Hotel Banner (Only for Round Trip) -->
          {{#if isRoundTrip}}
          <tr>
            <td>
              <div class="hotel-banner">
                <a href="{{hotelDeepLink}}" class="hotel-banner-link">
                  <div style="position: relative;">
                    <span class="hotel-banner-icon">üè®</span>
                    <div class="hotel-banner-text">
                      {{hotelBannerText}}
                      {{hotelCity}}
                      <span class="hotel-banner-arrow">‚Üí</span>
                    </div>
                  </div>
                </a>
              </div>
            </td>
          </tr>
          {{/if}}

          <!-- Help Section -->
          <tr>
            <td class="help-section">
              <a href="{{helpLink}}" class="help-link">
                <span class="help-icon">üéß</span>
                {{needHelpText}}
              </a>
            </td>
          </tr>

          <!-- Footer -->
          <tr>
            <td class="footer">
              <div class="footer-logo">
                ÿ£ŸÉŸäÿØ ÿ£ÿπŸÖÿßŸÑ<br />
                Akeed Corp
              </div>
              <div class="footer-contact">
                {{contactPhone}}
                |
                {{contactLocation}}
              </div>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>

</html>